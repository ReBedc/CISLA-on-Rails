
<% form_for([@proyect, @task]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :due_date %><br />
    <%= f.datetime_select :due_date %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.select :priority_id, Priority.all.collect {|p| [p.name, p.to_param]}, {:prompt => "Selecciona una prioridad"} %>
  </p>
  <p>
    <%= f.label :Tags %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit button_name %>
  </p>
<% end %>

<%= link_to 'Back', proyect_tasks_path(@proyect) %>
