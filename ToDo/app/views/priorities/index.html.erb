<% content_for :title do %> Listing priorities<% end %>

<table class ="table">
  <tr>
    <th>Value</th>
    <th>Name</th>
    <th>Color</th>
    <th></th>
  </tr>

<% @priorities.each do |priority| %>
  <tr>
    <td><%=h priority.value %></td>
    <td><%=h priority.name %></td>
    <td><%=h priority.color %></td>
    <td><%= link_to 'Show', priority %> |
        <%= link_to 'Edit', edit_priority_path(priority) %> |
        <%= link_to 'Destroy', priority, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New priority', new_priority_path %>